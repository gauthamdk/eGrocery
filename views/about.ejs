<%- include("./partials/header") %> 

  <section class="container mt-5" id="background-elem">
    <!-- Header alone (no content) -->
    <!-- Centered content -->
    <div class="header-div">
      <h1 class="display-1 text-centered txt-green caps">About Us</h1>
    </div>  


    <!-- subsection (about us, etc)  -->
    <section class="container no-margin my-1">

      <div class="row no-margin align-items-center">
        <div class="col-6">  
          <h3 class="display-5 text-centered txt-yellow">Who we are</h3>
          <p><strong>We are a new type of grecery store, selling exclusively online and guaranteeing the absolute best quality food at your easiest convenience. We are a Saadiyat based grocery store ready to deliver fresh groceries and delicious snacks.</strong></p>
        </div>
        <img src="../assets/imgs/about2.jpg" class="col-6 no-margin">
      </div>
    </section>

    <!-- Location section -->
    <section class="container no-margin my-1">

      <div class="row no-margin align-items-center">
        <div class="col-6"> 
          <div id="map"></div>
        </div>
        <div class="col-6">
          <h3 class="display-5 txt-green pb-3 text-centered">Where to Find Us?</h3>

          <p class="text-centered">Come by Saadiyat island to pick up your orders or have them delivered right to your door!</p>
        </div>
      </div>
    </section>   
    <!-- <div id="map"></div> -->


    <!-- Feedback -->
    <hr class="my-5">

    <div class="row justify-content-center">
      <div class="col-md-6">
        <h3 class="display-5 txt-green">Contact us:</h3>
        <form class="row g-3 needs-validation">

          <div class="col-md-12">
            <label for="textArea" class="form-label">Share your feedback</label>
            <textarea class="form-control" id="textArea" rows="3" required></textarea>
          </div>


          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
              <label class="form-check-label" for="invalidCheck">
                Agree to terms and conditions
              </label>
              <div class="invalid-feedback">
                You must agree before submitting.
              </div>
            </div>
          </div>

          <div class="col-12">
            <button class="btn btn-b" type="submit">Submit form</button>
          </div>
        </form>
      </div>
    </div>
    
  </section>

  <script type="text/javascript">
    function initMap() {
      let location = {lat: 24.524437306044515, lng: 54.434639070739486};
      let map = new google.maps.Map(document.getElementById("map"), {
        zoom: 12,
        center: location
      });

      let marker = new google.maps.Marker({
        position: location,
        map: map
      });
    }
